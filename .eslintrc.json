{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "describe": true,
        "it": true,
        "expect": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "array-bracket-spacing": [
            2,
            "always"
        ],
        "block-spacing": [
            2,
            "always"
        ],
        "comma-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ],
        "space-before-function-paren": [
            2,
            "always"
        ],
        "space-in-parens": [
            2,
            "always"
        ],
        "space-before-blocks": 2,
        "no-multi-spaces": "error"
    }
}
